/**index.wxss**/
.me-title{
  margin-top: 10rpx;
  width: 100%;
  height:200rpx;
  background-color: #eee;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.avatar{
  max-width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-left: 30rpx;
}
.me-body{
  display: block;
  height: 150rpx;
  margin-left: 30rpx;
  font-size: 34rpx;
}
.body-title{
  display: block;
  width: 100%;
  height:60rpx;
  line-height: 60rpx;
}
.body-xh{
  width: 100%;
  height:80rpx;
  line-height: 80rpx;
}
.me-item{
  margin-top: 20rpx;
  padding: 0 20rpx;
  height: 100rpx;
  background: #fff;
  line-height: 100rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
.me-item:hover{
  background-color: rgba(0,0,0,.05);
}

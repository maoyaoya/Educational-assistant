
.item-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #eee;
  color:#1AAD16;
  box-shadow: 0 0 10rpx 10rpx rgba(0,0,0,.1);
}
.item-body{
  margin:20rpx 0;
}
.item-body .item-msg{
  margin:10rpx 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding:0 15rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  display: flex;
}
.item-Kcmc{
  flex-grow: 1;
  white-space:nowrap;
	overflow:hidden;
  text-overflow:ellipsis;
}
.wx_msg{
  line-height: 80rpx;
  height: 80rpx;
  font-size: 30rpx;
  padding: 0 10rpx;
  white-space:nowrap; 
	width:100%; 
	overflow:hidden; 
  border-bottom: 1px solid rgba(0,0,0,.1);
  text-overflow:ellipsis;
}
/* components/Dialog/dialog.wxss */
.wx_dialog_container{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.2);
}
.wx_dialog_title{
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid rgba(0,0,0,.2);
  letter-spacing: 5rpx;
  text-align: center;
  font-size: 35rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  white-space:nowrap; 
	width:100%; 
	overflow:hidden;
  text-overflow:ellipsis;
}
.wx_menu{
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    border-radius: 10rpx;
    overflow: hidden;
    box-shadow: 0 3rpx 10rpx rgba(0,0,0,.1),0 5rpx 10rpx rgba(0,0,0,.05);
    animation: top .5s;
}
.wx_dialog_body{
  width: 100%;
  height: 600rpx;
  box-sizing: border-box;
  padding: 5rpx;
}
.wx_item{
  line-height: 60rpx;
  height: 60rpx;
  font-size: 25rpx;
  border-bottom: 1px solid rgba(0,0,0,.1);
}
@keyframes top{
  from{
    opacity: 0;
    top:0;
  }
  to{
    opacity: 1;
    top:50%;
  }
}